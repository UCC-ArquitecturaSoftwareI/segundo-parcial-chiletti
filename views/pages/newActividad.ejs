<div id="form-login">
    <form method="POST" action="/newActividad/<%- req.params.id %>">
        <div class="form-group">
            <label for="cantKilos" id="campoLogin">Cantidad de kilos: </label>
            <input type="number" class="form-control" id="cantKilos" name="cantKilos">
            <small id="emailHelp" class="form-text text-muted">Ingrese la cantidad de kilos actual.</small>
        </div>
        <div class="form-group">
            <label for="tipo">Tipo</label>
            <select name="tipo" id="tipo">
                <option>Egreso</option>
                <option>Ingreso</option>
            </select>
        </div>
        <div class="form-group">
            <label for="subtotal" id="campoLogin">Subtotal: </label>
            <input type="number" class="form-control" id="subtotal" name="subtotal">
            <small id="emailHelp" class="form-text text-muted">Ingrese el subtotal.</small>
        </div>
        <div class="form-group">
            <label for="coment" id="campoLogin">Comentario: </label>
            <input type="text" class="form-control" id="coment" name="coment">
            <small id="emailHelp" class="form-text text-muted">Ingrese una descripcion.</small>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </form>
</div>
